<h1>All Garage Tasks</h1>

<%= link_to 'New task', new_task_path %>

<table>
  <tr>
    <th>Task</th>
    <th>Time</th>
    <th>Station</th>
    <th>Importance</th>
    <th>Make</th>
    <th>Reg Number</th>
    <th></th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.task %></td>
      <td><%= task.time %></td>
      <td><%= task.station %></td>
      <td><%= task.importance %></td>
      <td><%= task.make %></td>
      <td><%= task.regnum %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
